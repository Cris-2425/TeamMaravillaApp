<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TeamMaravillaApp" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="Theme.TeamMaravillaApp.Splash" parent="Theme.SplashScreen">
        <!-- Fondo detrás del icono -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Icono mostrado en el splash (lo normal es un logo simple). -->
        <!-- Si quieres usar la ilustración completa, puede verse “demasiado grande”.
             Recomendación: usa un logo y luego enseñas la imagen en tu SplashScreen composable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>

        <!-- Tema real al terminar el splash -->
        <item name="postSplashScreenTheme">@style/Theme.TeamMaravillaApp</item>
    </style>

</resources>